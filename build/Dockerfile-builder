# golang:1.17.8-alpine3.14
FROM golang@sha256:f12830e38a0234d827b89cae0ed4406e6e683e752aa3d034d7358d635d9bf337 as builder

RUN ln -s /usr/local/go/bin/go /usr/local/bin/go

RUN apk add --no-cache curl wget gcc make bash git musl-dev libc6-compat

RUN touch /root/.profile

RUN curl https://get.please.build | sh

WORKDIR /go/github.com/thought-machine/aws-service-quotas-exporter

COPY . .

RUN source ~/.profile && plz test //... --show_all_output

RUN source ~/.profile && plz build //cmd:aws-service-quotas-exporter --show_all_output

# alpine:3.14
FROM alpine@sha256:635f0aa53d99017b38d1a0aa5b2082f7812b03e3cdb299103fe77b5c8a07f1d2

EXPOSE 9090

COPY --from=builder /go/github.com/thought-machine/aws-service-quotas-exporter/plz-out/bin/cmd/aws-service-quotas-exporter /home/app/aws-service-quotas-exporter

# Max user
RUN addgroup -g 255999 -S app && \
    adduser -u 255999 -S app -G app

RUN chmod +x /home/app/aws-service-quotas-exporter

USER app

ENTRYPOINT ["/home/app/aws-service-quotas-exporter"]
